<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/gray">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icon"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etName"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:inputType="textPersonName"
        android:background="@drawable/text_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        android:layout_marginTop="50dp"
        android:hint="Имя"
        android:fontFamily="@font/montserrat"
        android:textSize="22dp"
        android:textColorHint="@color/yellow"
        android:paddingStart="20dp"></EditText>

    <EditText
        android:id="@+id/etEmailreg"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_shape"
        android:fontFamily="@font/montserrat"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:textColorHint="@color/yellow"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName"></EditText>

    <EditText
        android:id="@+id/etPass"
        android:inputType="textPassword"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:background="@drawable/text_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmailreg"
        android:layout_marginTop="20dp"
        android:hint="Пароль"
        android:fontFamily="@font/montserrat"
        android:textSize="22dp"
        android:textColorHint="@color/yellow"
        android:paddingStart="20dp"></EditText>
    <EditText
        android:id="@+id/etPassRepeat"
        android:inputType="textPassword"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:background="@drawable/text_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPass"
        android:layout_marginTop="20dp"
        android:hint="Повторите пароль"
        android:fontFamily="@font/montserrat"
        android:textSize="22dp"
        android:textColorHint="@color/yellow"
        android:paddingStart="20dp"></EditText>

    <Button
        android:id="@+id/btConnect"
        android:onClick="btnRegistration"
        android:layout_width="328dp"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/montserrat_bold"
        android:shadowRadius="0"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassRepeat"></Button>

    <TextView
        android:layout_width="164dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:text="Помощь"
        android:textColor="@color/yellow"
        android:fontFamily="@font/montserrat"
        android:gravity="center"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>